<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comité d'Éthique - Fondation SCP</title>
    <style>
        
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div class="logo">COMITÉ D'ÉTHIQUE</div>
            <h1>Fondation SCP - Délégation Locale IRC N°43</h1>
        </header>

        <main>
            <section class="access-panel">
                <h2>Accès au QCM d'Éthique</h2>
                
                <div class="form-group">
                    <label for="sessionCode">Code de Session</label>
                    <input type="text" id="sessionCode" placeholder="Entrez votre code de session">
                </div>
                
                <button id="verifyBtn">Vérifier le Code</button>
                
                <div id="message" class="message"></div>
            </section>

            <section id="adminSection" class="admin-section">
                <h3>Administration</h3>
                <button id="generateBtn">Générer un Nouveau Code</button>
                <div id="generatedCode"></div>
            </section>
        </main>
    </div>

    <script>
        const CODES_URL = 'https://raw.githubusercontent.com/s43ceqcm/s43ceqcm.github.io/main/codes.json';

        
        async function loadCodes() {
            const response = await fetch(CODES_URL);
            const data = await response.json();
            return data.codes;
        }

        
        async function checkCode(inputCode) {
            const codes = await loadCodes();
            return codes.some(c => c.code === inputCode && c.valid);
        }

        
        function showMessage(text, isSuccess) {
            const msg = document.getElementById('message');
            msg.textContent = text;
            msg.className = 'message ' + (isSuccess ? 'success' : 'error');
        }

        
        document.addEventListener('DOMContentLoaded', () => {
            
            document.getElementById('verifyBtn').addEventListener('click', async () => {
                const code = document.getElementById('sessionCode').value.trim().toUpperCase();
                
                if (!code) {
                    showMessage('Veuillez entrer un code', false);
                    return;
                }
                
                const isValid = await checkCode(code);
                if (isValid) {
                    showMessage('✅ Code valide - Accès autorisé', true);
                    
                } else {
                    showMessage('❌ Code invalide ou expiré', false);
                }
            });

            
            document.getElementById('generateBtn').addEventListener('click', () => {
                const newCode = generateCode();
                addCode(newCode);
                document.getElementById('generatedCode').textContent = `Nouveau code: ${newCode}`;
            });
        });

        
        function generateCode() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let code = '';
            for (let i = 0; i < 6; i++) {
                code += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return code;
        }

        
        function addCode(code) {
            
        }
    </script>
</body>
</html>
